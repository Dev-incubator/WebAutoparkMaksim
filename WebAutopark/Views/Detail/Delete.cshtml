@model WebAutopark.DataAccesLayer.Entities.Detail
@{
    ViewData["Title"] = "Удаление детали";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>ID</dt>
        <dd>
            @Model.DetailId
        </dd>

        <dt>Name</dt>
        <dd>
            @Model.DetailName
        </dd>
    </dl>

    <div>
        <form asp-controller="Detail" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>