@model WebAutopark.DataAccesLayer.Entities.Detail
@{
    ViewData["Title"] = "Редактировать деталь";
}

<h2>@ViewData["Title"].</h2>

<form asp-action="Edit" asp-controller="Detail">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="DetailId" />
        <div class="form-group">
            <label asp-for="DetailName"></label>
            <input asp-for="DetailName" class="form-control form-control-sm" />
            <span asp-validation-for="DetailName" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Detail" asp-action="Index">Вернуться к списку</a>
</div>