@model IEnumerable<WebAutopark.Models.DetailViewModel>

@{
    ViewData["Title"] = "ViewDetails";
}

<hr />
<h4 class="text-center my-1">Details list</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.DetailId
                </td>
                <td>
                    @item.DetailName
                </td>
                <td>
                    <a asp-controller="Detail" asp-action="Edit" asp-route-id="@item.DetailId">Udpate</a> |
                    <a asp-controller="Detail" asp-action="Delete" asp-route-id="@item.DetailId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-controller="Detail" asp-action="Create">Add</a>
</p>