@model IEnumerable<WebAutopark.Models.OrderElementViewModel>

@{
    ViewData["Title"] = "OrderElementInfo";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                OrderId
            </th>
            <th>
                OrderElementId
            </th>
            <th>
                DetailId
            </th>
            <th>
                DetailName
            </th>
            <th>
                Quantity
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.OrderId
            </td>
            <td>
                @item.OrderElementId
            </td>
            <td>
                @item.DetailId
            </td>
            <td>
                @item.Detail.DetailName
            </td>
            <td>    
                @item.Quantity
            </td>
            <td>
                <a asp-controller="OrderElement" class="btn btn-outline-secondary" asp-action="Update" asp-route-orderElementId="@item.OrderElementId">Udpate</a> |
                <a asp-controller="OrderElement" class="btn btn-outline-secondary" asp-action="ConfirmDelete" asp-route-orderElementId="@item.OrderElementId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<hr>
<a asp-controller="OrderElement" class="btn btn-outline-secondary" asp-action="Create" asp-route-orderId="@ViewBag.OrderId">Add</a> |
<a asp-controller="Order" class="btn btn-outline-secondary" asp-action="Index">Back to orders list</a>

