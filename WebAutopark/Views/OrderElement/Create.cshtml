@model WebAutopark.Models.OrderElementViewModel

@{
    ViewData["Title"] = "NewOrderElement";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="OrderElement">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="OrderId" />
        <div class="form-group">
            <label asp-for="DetailId"></label>
            <select class="form-select custom-select" asp-for="DetailId">
                @foreach (var detail in ViewBag.Details)
                {
                    <option value="@detail.DetailId">@detail.DetailName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control form-control-sm" value="1"/>
            <span asp-validation-for="Quantity" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>
