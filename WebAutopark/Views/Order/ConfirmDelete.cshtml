@model WebAutopark.Models.OrderViewModel
@{
    ViewData["Title"] = "Delete Order";
}
<h2>@ViewBag.Title</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>
            @Model.OrderId
        </dd>

        <dt>VehicleId</dt>
        <dd>
            @Model.VehicleId
        </dd>
    </dl>

    <div>
        <form asp-controller="Order" asp-action="Delete" asp-route-orderId="@Model.OrderId" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>