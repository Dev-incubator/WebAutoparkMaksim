@model IEnumerable<WebAutopark.Models.OrderViewModel>

@{
    ViewData["Title"] = "ViewOrders";
}

<hr />
<h4 class="text-center my-1">Details list</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                OrderId
            </th>
            <th>
                VehicleId
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.OrderId
                </td>
                <td>
                    @item.VehicleId
                </td>
                <td>
                    <a asp-controller="OrderElement" class="btn btn-outline-secondary" asp-action="Index" asp-route-orderId="@item.OrderId">Info</a> | 
                    <a asp-controller="Order" class="btn btn-outline-secondary" asp-action="ConfirmDelete" asp-route-orderId="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>