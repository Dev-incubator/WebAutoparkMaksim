@model WebAutopark.Models.VehicleViewModel


<div>

    <img class="img-thumbnail" alt="@Model.Model" width="400" height="250" 
         src="@(Model.ImageLink is null ? Href("~/img/Cars/defaultCar.jpg") : Href($"~/img/Cars/{Model.ImageLink}"))"/>

    <div>

        <h4 class="mr-3 ">@Model.Model</h4>

        <div>
            <h6 class="d-inline-block">Type:</h6>
            <p class="m-2 d-inline-block">@Model.VehicleType.TypeName</p>
        </div>

        <div>
            <h6 class="d-inline-block">Year:</h6>
            <p class="m-2 d-inline-block">@Model.YearOfIssue</p>
        </div>

        <div>
            <h6 class="d-inline-block">Mileage:</h6>
            <p class="m-2 d-inline-block">@Model.Mileage</p>
        </div>

        <div>
            <h6 class="d-inline-block">Weight:</h6>
            <p class="m-2 d-inline-block">@Model.Weight</p>
        </div>

        <div>
            <h6 class="d-inline-block">TankCapacity:</h6>
            <p class="m-2 d-inline-block">@Model.TankCapacity</p>
        </div>

        <div>
            <h6 class="d-inline-block">FuelConsumption:</h6>
            <p class="m-2 d-inline-block">@Model.FuelConsumption</p>
        </div>

        <div>
            <h6 class="d-inline-block">LicensePlate:</h6>
            <p class="m-2 d-inline-block">@Model.LicensePlate</p>
        </div>       


        <div>
            <h6 class="d-inline-block">Color:</h6>
            <p class="m-2 d-inline-block">@Model.Color</p>
        </div> 

        <div>
            <h6 class="d-inline-block">Price:</h6>
            <p class="m-2 d-inline-block">$@Model.Price</p>
        </div>

        <hr class="my-4">

         <div>
            <h6 class="d-inline-block">Tax coefficient per month:</h6>
            <p class="m-2 d-inline-block">@Model.GetCalcTaxPerMonth</p>
        </div> 

         <div>
            <h6 class="d-inline-block">Max kilometers:</h6>
            <p class="m-2 d-inline-block">@Model.GetCalcMaxKm</p>
        </div> 
    </div>
    <hr class="my-4">
    <p>
    <a asp-controller="Order" class="btn btn-outline-secondary" asp-action="Create" asp-route-vehicleId="@Model.VehicleId">Order details</a>
    </p>
</div>
