@model IEnumerable<WebAutopark.Models.VehicleViewModel>

@{ 
    ViewData["Title"] = "View Vehicles"; 
}

<hr />
<h4 class="text-center my-1">Vehicles list</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Model
            </th>
            <th>
                Year
            </th>
            <th>
                Weight
            </th>
            <th>
                TankCapacity
            </th>
            <th>
                LicensePlate
            </th>
            <th>
                Mileage
            </th>
            <th>
                Color
            </th>
            <th>
                VehicleTypeId
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.VehicleId
            </td>
            <td>
                @item.Model
            </td>
            <td>
                @item.YearOfIssue
            </td>
            <td>
                @item.Weight
            </td>
            <td>
                @item.TankCapacity
            </td>
            <td>
                @item.LicensePlate
            </td>
            <td>
                @item.Mileage
            </td>
            <td>
                @item.Color
            </td>
            <td>
                @item.VehicleTypeId
            </td>
            <td>
                <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@item.VehicleId">Udpate</a> |
                <a asp-controller="Vehicle" asp-action="ConfirmDelete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<p>
    <a asp-controller="Vehicle" asp-action="Create">Add</a>
</p>