@model IEnumerable<WebAutopark.Models.VehicleViewModel>

@{ 
    ViewData["Title"] = "View Vehicles"; 
}

<hr />
<h4 class="text-center my-1">Vehicles list</h4>
<hr />
<table class="table table-striped table-borderless table-sm">
    <thead class="thead-light">
        <tr>
            <th>
                Id
            </th>
            <th>
                Image
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SortByModel">Model</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SortByMileage">Mileage</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.SortByType">VehicleTypeId</a>
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.VehicleId
            </td>
            <td class = "w-25">
                <img src="@(item.ImageLink is null ? Href("~/img/Cars/defaultCar.jpg") : Href($"~/img/Cars/{item.ImageLink}"))" class="card-img">
            </td>
            <td>
                @item.Model
            </td>
            <td>
                @item.Mileage
            </td>
            <td>    
                @item.VehicleType.TypeName
            </td>
            <td>
                <a asp-controller="Vehicle" class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.VehicleId">Udpate</a> |
                <a asp-controller="Vehicle" class="btn btn-outline-secondary" asp-action="ConfirmDelete" asp-route-id="@item.VehicleId">Delete</a> |
                <a asp-controller="Vehicle" class="btn btn-outline-secondary" asp-action="Information" asp-route-id="@item.VehicleId">Info</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<p>
    <a asp-controller="Vehicle" class="btn btn-outline-secondary" asp-action="Create">Add</a>
</p>