@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<WebAutopark.DataAccesLayer.Entities.Vehicle>


<div class="m-4">
    <div class="d-inline-block">
        <a asp-controller="Vehicle" asp-action="Index" class="btn btn-outline-info">Список машин</a>
    </div>
    <div class="d-inline-block">
        <a asp-controller="VehicleType" asp-action="Index" class="btn btn-outline-info">Список категорий(типов) машин</a>
    </div>
    <div class="d-inline-block">
        <a asp-controller="Detail" asp-action="Index" class="btn btn-outline-info">Список деталей</a>
    </div>
</div>

<div class="row mt-5 mb-2">
    @{ foreach (var item in Model)
        {
            <div class="col-lg-4 d-flex flex-wrap">
                <img class="img-thumbnail " src="~/img/@item.ImageLink" alt="@item.Model" style="width:100%; height:220px;" />
                <div class=" d-flex flex-wrap" style="background-size: cover; width:100%;">
                    <h3 class="d-inline-block mr-auto">@item.Model</h3>
                    <p class="d-inline-block my-1"><a class="btn btn-warning" asp-controller="Vehicle" asp-action="GetInformation" asp-route-id="@item.VehicleId">Подробнее</a></p>
                </div>

                <div class=" d-flex flex-wrap" style="background-size: cover; width:100%;">
                    <h5 class="d-inline-block mr-auto">@item.Color</h5>
                    <p class="d-inline-block my-1">$@item.Price</p>
                </div>


            </div>
        }
    }

</div>
